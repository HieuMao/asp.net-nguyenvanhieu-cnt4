@model IEnumerable<Nvh_Lesson10.Models.NvhAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NvhLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NvhUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvhPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvhFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvhEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvhPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvhActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NvhUserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NvhPassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NvhFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NvhEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NvhPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NvhActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NvhID }) |
            @Html.ActionLink("Details", "Details", new { id=item.NvhID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NvhID })
        </td>
    </tr>
}

</table>
